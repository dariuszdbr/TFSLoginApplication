<Page x:Class="LoginPanelApplication.Panels.EmployeePanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoginPanelApplication.Panels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EmployeePanel">

    <Grid>
        <Grid VerticalAlignment="Center">
            <StackPanel>
                <Button x:Name="Logout" Margin="10" Click="Logout_Click">Logout</Button>
            </StackPanel>
        </Grid>
        <Label x:Name="lblCurrentUser" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
