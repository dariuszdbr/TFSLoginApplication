<Page x:Class="LoginPanelApplication.Panels.UserManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:converter="clr-namespace:LoginPanelApplication.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900" Background="GhostWhite" x:Name="UserMgr"
      Title="UserManager">

    <Page.Resources>
        <converter:BoolToUserStatusConverter x:Key="BoolToUserStatusConverter" />
    </Page.Resources>
    <Border BorderThickness="20" BorderBrush="AliceBlue">
        <Grid>
        <StackPanel Margin="0,0,0,0">
            <GroupBox Margin="10"  FontSize="12.5">
                <GroupBox.Header>
                    <Bold>Add new user with permission</Bold>
                </GroupBox.Header>
                <StackPanel>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid HorizontalAlignment="Left" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel  Orientation="Horizontal" Margin="0,10,0,20" >
                                <Label Width="100" FontWeight="Bold">First Name:</Label>
                                <TextBox x:Name="txtName" Width="380" ToolTip="Please enter the employee's first and last name"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Label Width="100" FontWeight="Bold">Last Name:</Label>
                                <TextBox x:Name="txtLastName" Width="380"/>
                            </StackPanel>

                            <GroupBox Grid.Row="2" FontSize="9" Header="Optional">
                                <StackPanel Orientation="Horizontal">
                                    <Label Width="95" FontSize="12" FontWeight="Bold">Password:</Label>
                                    <TextBox x:Name="txtPassword" Width="378" FontSize="12" />
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <GroupBox Header="Select permission" >
                                <StackPanel >
                                    <RadioButton x:Name="permissionAdmin" Margin="0,10,0,20">Admin</RadioButton>
                                    <RadioButton x:Name="permissionEmployee" Margin="0,20,0,0">Employee</RadioButton>
                                </StackPanel>
                            </GroupBox>

                            <StackPanel Grid.Column="2">
                                <Button x:Name="btnAddUser" Click="btnAddUser_Click" Margin="10" VerticalAlignment ="Top">Add User</Button>
                                <Button x:Name="btnUpdate" Click="btnUpdate_Click"   Margin="10" VerticalAlignment ="Center">Update User Data</Button>
                                <Button x:Name="btnClear" Click="btnClear_Click"     Margin="10" VerticalAlignment ="Bottom">Clear / Cancel</Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <DataGrid Margin="10" MaxHeight="200"  
                  x:Name="DataGridManager" 
                  AlternatingRowBackground="AliceBlue"
                  AutoGenerateColumns="False"
                  CanUserResizeRows="False"  
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  MouseDoubleClick="DataGridManager_MouseDoubleClick"
                      FrozenColumnCount="2"
                  >

                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto" Header="ID" Binding="{Binding Path=UserID}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn  Width="Auto" Header="Name" Binding="{Binding Path=Name}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100" Header="Last Name" Binding="{Binding Path=LastName}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100" Header="Login" Binding="{Binding Path=Login}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100" Header="Password" Binding="{Binding Path=Password}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100" Header="Status" Binding="{Binding Path=Status, Converter={StaticResource BoolToUserStatusConverter}}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="150" Header="Last login date" Binding="{Binding Path=LoginDate}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="150" Header="Last logout date" Binding="{Binding Path=LogoutDate}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100" Header="Worked hours" Binding="{Binding Path=WorkingTime}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="150" Header="Date of employment" Binding="{Binding Path=DateOfEmployment}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Beige" />
                        <Style.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="IsFocused" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="FontWeight" Value="Bold"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.ItemContainerStyle>
            </DataGrid>
                <Button Margin="20,0,20,0" x:Name="btnDeleteUser" Click="btnDeleteUser_Click">Delete Selected User</Button>
            </StackPanel> 
             <Button VerticalAlignment="Bottom" DockPanel.Dock="Left" Margin="20,0,20,0" x:Name="btnBack" Click="btnBack_Click">Back to Admin panel</Button>
            </Grid>
    </Border>
</Page>
