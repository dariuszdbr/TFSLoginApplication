<Page x:Class="LoginPanelApplication.Panels.EmployeePanel"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:converter="clr-namespace:LoginPanelApplication.Converters"
mc:Ignorable="d" 
d:DesignHeight="600" d:DesignWidth="900" Background="AliceBlue"
Title="EmployeePanel">
 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center">
            <StackPanel>
                <Button x:Name="Logout" Margin="10" Click="Logout_Click">Logout</Button>
                <Button x:Name="btnChecAttendance" Margin="10" Click="btnChecAttendance_Click">Check Attendance</Button>
            </StackPanel>
        </Grid>
        <Label Grid.Row="1" x:Name="lblCurrentUser" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
    </Grid>
</Page>
