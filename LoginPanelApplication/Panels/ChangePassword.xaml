<Window x:Class="LoginPanelApplication.Panels.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPanelApplication.Panels"
        mc:Ignorable="d"
        Title="Set new password" Height="300" Width="500" WindowStartupLocation="CenterScreen" >
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
            <Label Width="100" Content="Password:"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Stretch" Width="300" ></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Top"  Orientation="Horizontal" Margin="0,10,0,0">
            <Label Width="100">Repeat: </Label>
            <TextBox x:Name="txtRepeat" Width="300" HorizontalAlignment="Stretch"></TextBox>
        </StackPanel>
        <Button x:Name="btmSetPassword" Grid.Row="2" VerticalAlignment="Top" Click="btmSetPassword_Click">Set new password</Button>
    </Grid>
</Window>
